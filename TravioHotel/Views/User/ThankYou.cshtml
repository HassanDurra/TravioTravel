
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";   
    var passangerData = Newtonsoft.Json.JsonConvert.DeserializeObject(ViewBag.Data);
    ViewData["title"] = "Booking Confirmed";
}

   
<style>
    .logo-airline img {
        width: 80px;
        height: 30px;
        object-fit: contain;
    }

    th {
        background: black !important;
        color: white !important;
    }

    .tablesection td {
        white-space: nowrap;
    }

    .tablesection th {
        font-size: 10px;
    }

    td {
        font-size: 10px;
    }

    .heading {
        background-color: black;
        display: flex;
        justify-content: space-between;
        padding: 10px;
    }

    .airline {
        padding: 10px;
        display: flex;
        border: 1px solid gray;
        margin-top: 10px;
        justify-content: space-between;
    }

        .airline span {
            border: 2px dotted rgb(184, 184, 184);
            padding: 10px;
            border-radius: 5px;
        }

    .tablesection {
        width: 100%;
    }

        .tablesection table {
            width: 100%;
        }

            .tablesection table th {
                background-color: black;
                padding: 10px;
                color: white;
            }

            .tablesection table td {
                background-color: rgba(225, 225, 225, 0.445);
                padding: 10px;
                color: rgb(21, 17, 17);
                border: 1px solid rgba(255, 166, 0, 0.49);
            }

    .table-heading {
        padding: 5px;
        text-transform: uppercase;
        border-bottom: 2px solid orange;
    }

    .noticeContainer {
        margin-top: 20px;
    }

        .noticeContainer .noticer-heading {
            border-bottom: 2px solid grey;
            width: max-content;
        }

    .notice-content {
        padding: 20px;
        font-size: 13px;
    }

    #content {
        margin: 0px 10px;
    }
</style>

<!--================= PAGE-COVER ================-->
<section class="page-cover" id="cover-thank-you">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-title">Thank You</h1>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Thank You</li>
                </ul>
            </div><!-- end columns -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end page-cover -->
<!--==== INNERPAGE-WRAPPER =====-->
<section class="innerpage-wrapper">
    <div id="thank-you" class="innerpage-section-padding">
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-12 col-lg-9 col-xl-9 content-side">
                    <div class="space-right">
                        <div class="thank-you-note">
                            <h3>Your Booking is confirmed now. Thank You!</h3>
                            <p style="margin-top:10px">Thanks For Using <b style="color:darkorange; padding:10px;font-size:30px;">Travio<span style="color:black">Travel</spa></b> As your Travel Assistant.</p>
                            <a href="#" class="btn btn-orange">Check Details</a>
                        </div><!-- end thank-you-note -->

                        <div class="traveler-info">
                            <h3 class="t-info-heading"><span><i class="fa fa-info-circle"></i></span>Traveler Information</h3>
                            <div class="table-responsive" >
                                <table class="table">
                                    <thead style="white-space:nowrap;">
                                        <tr>
                                         <th>Booking Number</th>
                                         <th>First Name</th>
                                         <th>Last Name</th>
                                         <th>Email Address</th>
                                         <th>Age</th>
                                         <th>City</th>
                                         <th>Country</th>
                                         <th>Print Ticket</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var passangerDetails in @passangerData)
                                        {
                                        <tr>
                                            <td>@passangerDetails.Booking_Number</td>
                                            <td>@passangerDetails.firstName </td>
                                            <td>@passangerDetails.lastName </td>    
                                            <td>@passangerDetails.email</td>
                                            <td>@passangerDetails.age</td>
                                            <td>@passangerDetails.city_name</td>                             
                                            <td>@passangerDetails.country_name</td>
                                            <td class="pdfContainer"><center>
                                                        <input class="passangerID" name="passangerID" value="@passangerDetails.id">
                                                        <a class="btn btn-warning pdfGenerateButton" style="border-radius:5px;"><i class="fa fa-print"></i></a>
                                            </center>
                                            </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div><!-- end table-responsive -->
                            <div id="pdfdata"></div>
                            <div class="payment-method">
