@model TravioHotel.Models.UserModel 
@{
    ViewData["title"] = "Login";
    Layout = "~/Views/Shared/_Userlayout.cshtml";
}

<!--============= PAGE-COVER =============-->
<section class="page-cover" id="cover-login">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-title">Login</h1>
                <ul class="breadcrumb">
                    <li><a asp-controller="Home" asp-area="User" asp-action="Index">Home</a></li>
                    <li>/ Login</li>
                </ul>
            </div><!-- end columns -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end page-cover -->
<!--===== INNERPAGE-WRAPPER ====-->
<section class="innerpage-wrapper">
    <div id="login" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Login</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                            <form asp-area="Auth" asp-action="Authentication" method="Post">

                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email Address" asp-for="Email" name="Email" required />
                                    <span><i class="fa fa-user"></i></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Password" required />
                                    <span><i class="fa fa-lock"></i></span>
                                </div>

                                <div class="checkbox">
                                    <label><input type="checkbox"> Remember me</label>
                                </div>

                                <button type="submit" class="btn btn-orange btn-block mt-0">Login</button>
                            </form>

                            <div class="other-links">
                                <p class="link-line">New Here ? <a asp-action="Registeration" asp-controller="Auth" asp-area="User">Signup</a></p>
                                <a class="simple-link" asp-action="ResetPassword" asp-controller="Auth" asp-area="User">Forgot Password ?</a>
                            </div><!-- end other-links -->
                        </div><!-- end custom-form -->

                        <div class="flex-content-img custom-form-img">
                            <img src="~/userassets/images/login.jpg" class="img-fluid" alt="registration-img" />
                        </div><!-- end custom-form-img -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login -->
</section><!-- end innerpage-wrapper -->
