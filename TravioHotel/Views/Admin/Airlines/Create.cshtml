@model TravioHotel.Models.Airlines ;
@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    if (TempData["action"] == "create")
    {
        ViewData["title"]        = "Create";
        ViewData["parentButton"] = "Create";
        ViewData["parentAction"] = "Store";
    }
    else
    {
        ViewData["title"] = "Edit";
        ViewData["parentButton"] = "Update";
        ViewData["parentAction"] = "Update";
    }

}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Horizontal Form</h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form id="airlinesForm" asp-action="@ViewData["parentAction"]" asp-controller="Airlines" method="post">

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Service Logo Url</label>
                        <input type="text" name="AirlineImage" asp-for="AirlineImage" class="form-control" placeholder="Service Logo Url">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Service Name</label>
                        <input type="text" name="Airlinename" asp-for="Airlinename" class="form-control" placeholder="Service Name">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">IATA Code <small>(International Air Transport Association)</small></label>
                        <input type="text" name="IATACode" asp-for="IATACode" class="form-control" placeholder="IATA code">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label>ICAO Code <small>(The International Civil Aviation Organization)</small></label>
                        <input type="text" name="ICAOCode" asp-for="ICAOCode" class="form-control" placeholder="ICAO Code">
                    </div>
                </div>
                
            
                <button type="submit" class="btn btn-primary">@ViewData["parentButton"]</button>
            </form>
        </div>
    </div>
</div>
