@model List<TravioHotel.Models.Airlines>
@{
    ViewData["title"] = "Trashed Airlines Services";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}
<div class="card">
    <div class="card-header d-flex">


        <h4 class="card-title">Trashed Airline Services</h4>

        <a asp-action="Index" asp-controller="Airlines" class="btn btn-success" title="All Airlines"><i class="fa fa-home"></i></a>


    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example4" class="display" style="min-width:100%">
                <thead>
                    <tr>
                        <th>Service Id</th>
                        <th>Service Logo</th>
                        <th>Service Name</th>
                        <th>ICAO Code </th>
                        <th>IATA Code </th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var airline in Model)
                    {
                        <tr>
                            <td>@airline.Id</td>
                            @if (airline.AirlineImage == "undefined")
                            {
                                <td class="text-danger">No Image</td>
                            }
                            else
                            {
                                <td><img src="@airline.AirlineImage" style="width:40px  ; height:40px ; object-fit:contain"></td>
                            }

                            <td>@airline.Airlinename</td>
                            <td>@airline.ICAOCode</td>
                            <td>@airline.IATACode</td>
                            <td><a class="btn btn-success" href="/Airlines/Restore/@airline.Id"><i class="fa fa-undo"></i></a> | <a href="/Airlines/Destroy/@airline.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
