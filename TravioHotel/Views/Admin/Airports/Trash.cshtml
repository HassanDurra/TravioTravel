@model List<TravioHotel.Models.Airport>
@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["title"] = "Trashed Airports";
}
<div class="card">
    <div class="card-header d-flex">


        <h4 class="card-title">Trashed Airports</h4>
        <div class="d-flex">

            <a class="btn btn-success" asp-action="Index" asp-controller="Airport" title="All Airports"><i class="fa fa-home"></i></a>

        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example4" class="display" style="min-width:100%">
                <thead>
                    <tr>
                        <th>Airport Id</th>
                        <th>Airport Image</th>
                        <th>Airport Name</th>
                        <th>Airport Country </th>
                        <th>IATA Code </th>
                        <th>ICAO Code </th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var airport in ViewBag.data.Airports)
                    {
                        <tr>
                            <td>@airport.Id</td>
                            @if (airport.Image == "undefined")
                            {
                                <td class="text-danger">No Image</td>
                            }
                            else
                            {
                                <td><img src="@airport.Image" style="width:40px  ; height:40px ; object-fit:contain"></td>
                            }
                            <td>@airport.Name</td>
                            <td>@ViewBag.data.Country.name</td>
                            <td>@airport.IcaoCode</td>
                            <td>@airport.IataCode</td>
                            <td><a class="btn btn-success" href="/Airport/Restore/@airport.Id"><i class="fa fa-undo"></i></a> | <a href="/Airport/Destroy/@airport.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
