
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["title"] = "Booking Requests";

}

<div class="card">
    <div class="card-header d-flex">


        <h4 class="card-title">All Booking Requests</h4>
        <div class="d-flex">

            <a class="btn btn-danger" asp-action="Trash" asp-controller="Airlines" title="Trashed Airlines"><i class="fa fa-trash"></i></a>
            | <a class="ml-4 mr-3 btn btn-success" asp-action="Create" asp-controller="Airlines" title="Add Airlines"><i class="fa fa-plus"></i></a>

        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example4" class="display" style="min-width:100%">
                <thead>
                    <tr>
                        <th>Booking Number</th>
                        <th>Client Name </th>
                        <th>Client Email</th>
                        <th>From Country  </th>
                        <th>From City </th>
                        <th>To Country </th>
                        <th>To City </th>
                        <th>Requested DP Date</th>
                        <th>Requested AV Date</th>
                        <th>Requested Date </th>
                        <th>Status</th>
                        <th>Check Availability</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Data)
                    {
                        var booking = item.Booking;
                        var user = item.User;
                        var fromCountry = item.FromCountry;
                        var toCountry = item.ToCountry;

                        <tr>
                            <td>@booking.booking_code</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@fromCountry.name</td>
                            <td>@booking.from_city</td>
                            <td>@toCountry.name</td>
                            <td>@booking.to_city</td>
                            <td>@booking.departure_date</td>
                            <td>@booking.arrival_date</td>
                            <td>@booking.created_at</td>
                            @if(@booking.status == 0)
                            {
                                <td>

                                    <button readonly class="btn btn-warning" title="Send For Checking"><i class="fa fa-upload"></i></button>
                                </td>
                            } 
                            @if(@booking.status == 1)
                            {
                                <td>
                                    <button readonly class="btn btn-success"  title="Available"><i class="fa-solid fa-check"></i></button>
                                </td>
                            } 
                            @if(@booking.status == 2)
                            {
                                <td>
                                    <button readonly class="btn btn-danger"  title="No Found"><i class="fa fa-x"></i></button>
                                </td>
                            }
                            <td><button class="btn btn-danger"><i class="fa fa-trash"></i></button></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
